<?xml version="1.0" encoding="UTF-8"?>
<feature id="com.epistimis.face.feature"
	label="Face Feature "
      version="1.0.0.qualifier"
      provider-name="Epistimis LLC">

   <description>
      Support for Future Airborne Capability Environment (FACE) UoP and Integration Models.

Includes support for UDDL Data Models (Conceptual, Logical and Platform) and UDDL Queries.
   </description>

   <includes
         id="com.epistimis.uddl.feature"
         version="0.0.0"
         name="Universal Data Definition Language"/>

   <includes
         id="com.epistimis.uddl.query.feature"
         version="0.0.0"
         name="UDDL Query Language"
         search-location="both"/>

   <requires>
      <import feature="org.eclipse.gmf.runtime.notation" version="0.0.0" match="greaterOrEqual"/>
      <import feature="org.eclipse.sirius.runtime" version="0.0.0" match="greaterOrEqual"/>
      <import feature="org.eclipse.sirius.runtime.ide.ui" version="0.0.0" match="greaterOrEqual"/>
   </requires>

	<plugin
			id="com.epistimis.face"
			download-size="0"
			install-size="0"
			version="0.0.0"
			unpack="false"/>

	<plugin
			id="com.epistimis.face.ide"
			download-size="0"
			install-size="0"
			version="0.0.0"
			unpack="false"/>

	<plugin
			id="com.epistimis.face.ui"
			download-size="0"
			install-size="0"
			version="0.0.0"
			unpack="false"/>

</feature>
